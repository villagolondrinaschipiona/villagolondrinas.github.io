generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Booking {
  id        String   @id @default(cuid())
  name      String
  email     String
  guests    Int
  message   String?
  checkIn   String   // Storing as YYYY-MM-DD string for simplicity matching existing logic
  checkOut  String
  status    String   @default("PENDING") // PENDING, ACCEPTED, CANCELLED
  estimatedPrice Float? // New dynamic pricing field
  createdAt DateTime @default(now())
}

model SiteContent {
  id              String   @id @default("main") // Singleton record
  heroTitle       String   @default("Villa Golondrinas")
  heroTagline     String   @default("Escapada Exclusiva")
  heroDescription String   @default("Donde el lujo encuentra la paz")
  heroImage       String   @default("https://images.unsplash.com/photo-1518780664697-55e3ad937233?auto=format&fit=crop&q=80")
  aboutTitle      String   @default("Nuestra Casa")
  aboutIntro      String   @default("Un refugio premium...")
  aboutDetails    String   @default("Detalles extendidos...")
  aboutImage      String   @default("https://images.unsplash.com/photo-1600596542815-ffad4c1539a9?auto=format&fit=crop&q=80")
  
  contactEmail    String   @default("villagolondrinaschipiona@gmail.com")
  contactPhone    String   @default("+34 600 000 000")
  contactAddress  String   @default("Chipiona, Cádiz, España")

  featuresTitle   String   @default("Comodidades Destacadas")
  feature1Title   String   @default("Conectividad Total")
  feature1Desc    String   @default("Fibra óptica de alta velocidad 1Gbps en toda la propiedad, ideal para disfrutar o teletrabajar sin interrupciones.")
  feature2Title   String   @default("Cocina Gourmet")
  feature2Desc    String   @default("Totalmente equipada con electrodomésticos de última generación, isla central y vinoteca. Perfecta para amantes de la gastronomía.")
  feature3Title   String   @default("Aparcamiento")
  feature3Desc    String   @default("Garaje privado para dos vehículos y zona exterior de aparcamiento. Incluye cargador para vehículos eléctricos.")

  ctaTitle        String   @default("Reserva tu estancia de ensueño hoy mismo")
  ctaDesc         String   @default("Las fechas se llenan rápidamente. Asegura tu paraíso particular ahora.")
  ctaButton       String   @default("Consultar el Calendario")

  footerIntro     String   @default("Tu destino premium para vacaciones inolvidables. Diseño, confort y tranquilidad absoluta en un entorno privilegiado.")
  
  // JSON fields for arrays
  galleryImages   Json     @default("[]") // Array of { url: string, title: string }
  blockedDates    Json     @default("[]") // Array of string dates (YYYY-MM-DD)
  
  // Pricing Fields
  defaultPrice    Float    @default(150.0)
  seasonalPrices  Json     @default("[]") // Array of { name: string, startDate: string, endDate: string, price: number }
  pricingDisclaimer String @default("Precio estimado. El anfitrión confirmará el precio final.")

  updatedAt       DateTime @updatedAt
}
